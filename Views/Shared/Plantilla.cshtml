<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - ICare</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a href="~/" class="navbar-brand">ICare</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                @if (Context.User.Identity.IsAuthenticated) {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Cuenta" asp-action="Logout">Cerrar sesión</a>
                    </li>
                }
                else {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Cuenta" asp-action="RegistrarCuenta">Crear cuenta</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Cuenta" asp-action="Login">Iniciar sesión</a>
                    </li>
                }
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Mas Informacion
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="~/Home/Campañas">Registrar Campañas</a>
                        <a class="dropdown-item" href="~/Home/ListaCampaña">Ver Campañas</a>
                    </div>
                </div>
                 <li class="nav-item"><a class="nav-link" href="~/Home/Campañas">Campañas</a></li>
                <li class="nav-item"><a class="nav-link" href="">Contacto</a></li>               
            </ul>
        </div>
    </nav>
    @RenderBody()
    <footer>&copy; @DateTime.Now.Year - ICare</footer>
</body>
</html>