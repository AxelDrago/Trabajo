@model Trabajo.ViewModels.LoginViewModel

@{
    ViewBag.Titulo = "Iniciar Sesión";
}

<div class="card container container-fluid">
    <h2 class="text-center h1-responsive font-weight-bold my-4">Iniciar Sesión</h2>

    <form asp-action="login" method="post">

        <div asp-validation-summary="All"></div>

        <div class="form-group col-7">
            <label for="exampleInputEmail1">Nombre de usuario: </label>
            <input asp-for="Usuario" class="form-control" id="exampleInputEmail1" placeholder="Usuario">
        </div>
        <div class="form-group col-7">
            <label for="exampleInputPassword1">Password: </label>
            <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group">
            <button class="btn text-white rgba-indigo-strong font-weight-bold">Iniciar sesión</button>
        </div>
    </form>

</div>