@using Trabajo.ViewModels;
@model modificarContrasenaViewModel

@if (Context.User.Identity.IsAuthenticated) {

<h1>Cambiar contraseña</h1>

<form asp-action="modificarContrasena" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label>Contraseña actual:</label> 
        <input asp-for="ContrasenaActual">
    </div>
    <div class="form-group">
        <label>Contraseña nueva:</label> 
        <input asp-for="ContrasenaNueva">
    </div>
    <div class="form-group">
        <label>Confirmar Contraseña:</label>
        <input asp-for="ContrasenaConfirmacion">
    </div>
    <div class="form-group">
            <button style="background-color: green" class="btn btn-primary btn-lg btn-block" type="submit">Modificar Contraseña</button>
    </div>
</form>
}else{
        <h1>NO TIENE PERMISOS PARA VISUALIZAR ESTA PAGINA</h1>
        <div class="container">
                <img src="~/imagenes/error.png" alt="" >
        </div>

        
}