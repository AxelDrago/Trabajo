@model Trabajo.ViewModels.RegistrarCuentaViewModel

@{
    ViewBag.Titulo = "Registro";
}

<div class="card container container-fluid">
    <h2 class="text-center h1-responsive font-weight-bold my-4">Registrar Cuenta</h2>

    <form asp-action="register" method="post">

        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="exampleInputEmail1">Nombre de usuario: </label>
                <input asp-for="Usuario" class="form-control" id="exampleInputEmail1" placeholder="Usuario">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email: </label>
                <input asp-for="Email" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
        </div>
        
        <div class="form-row">    
            <div class="form-group col-md-6">
                <label for="inputPassword4">Password: </label>
                <input asp-for="Password" class="form-control" id="inputPassword4" placeholder="Password">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Confirmar contrase√±a: </label>
            <input asp-for="PasswordConfirmacion" class="form-control" id="inputPassword4" placeholder="Password">
            </div>
    </div>
        <div class="form-group">
            <button class="btn text-white rgba-indigo-strong font-weight-bold">Crear cuenta</button>
        </div>
    </form>
</div>