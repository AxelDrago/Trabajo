@model Mascota

@{
    ViewBag.Titulo = "Registrar Mascota";
}

<form asp-action="registrar mascota" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        Nombre: <input asp-for="NombreTemporal">
    </div>
    <div>
        Edad: <input asp-for="Edad">
    </div>
    <div>
        Sexo: 
        <select name="Sexo">
        <option value="0">M</option>
        <option value="1">H</option>    
    </select>   
    </div>
    <div>
        Foto: <input asp-for="Foto">
    </div>
    <div>
        Tipo:
        <select name="TipoId">
            @foreach(var t in (List<TipoMascota>)ViewBag.Tipos)
            {
                <option value="@t.Id">@t.Nombre</option>
            }
        </select>
    </div>
    <div>
        Raza: <input asp-for="Raza">
    </div>
    <div>
        Descripcion: <textarea asp-for="Descripcion"></textarea>
    </div>
    <button>Registrar</button>
</form>