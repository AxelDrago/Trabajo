@model Evento

@{
    ViewBag.Titulo = "Registrar Eventos";
}

<div class="text-center card container container-fluid">
    <h2 class="h1-responsive font-weight-bold my-4">Formulario para registrar eventos</h2>
    <p class="w-responsive mx-auto mb-5">Ingrese todos los datos necesarios en sus respectivas casillas</p>
    <form asp-action="evento" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group col-7">
            <input asp-for="Titulo" class="form-control"  placeholder="Titulo">
        </div>
        <div class="form-group align-items-center col-7">
            <select name="TipoId" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option selected>Tipo de Evento</option>
                @foreach(var t in (List<TipoEvento>)ViewBag.TipoC)
                {
                    <option value="@t.Id">@t.Nombre</option>
                }
            </select>
        </div>
        <div class="form-group col-7">
            <input asp-for="Foto" class="form-control"  placeholder="Foto">
        </div>
        <div class="form-group col-7">
            <textarea asp-for="Contenido" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Más información sobre el evento"></textarea>
        </div>
        <div class="form-group col-2">
            <button class="btn text-white rgba-indigo-strong font-weight-bold">Registrar</button>
        </div>
        
    </form>
</div>