@model Evento

<form asp-action="evento" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        Titulo: <input asp-for="Titulo">
    </div>
    <div>
        Tipo:
        <select name="TipoId">
            @foreach(var t in (List<TipoEvento>)ViewBag.TiposC)
            {
                <option value="@t.Id">@t.Nombre</option>
            }
        </select>
    </div>
    <div>
        Contenido: <textarea asp-for="Contenido"></textarea>
    </div>
    <button>Registrar</button>
</form>