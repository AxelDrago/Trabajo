@model List<Campañas>

<h1>Campañas</h1>

<form asp-action="campañas" method="get">
    Filtrar por tipo de campaña:
    <select name="tipocampaña">
        <option value="0">Todos</option>
        @foreach(var t in (List<TipoCampaña>)ViewBag.TipoC)
        {
            <option value="@t.Id">@t.Nombre</option>
        }
    </select>   
    <button>Filtrar</button>
</form>

@if (Model.Count == 0)
{
    <p>Aún no hay campañas que ver</p>
}

<div class="text-center">
    @foreach (var m in Model)
    {
        <h2>Titulo: @m.Titulo</h2>
        <p>Descripcion: @m.Contenido</p>
    }
</div>