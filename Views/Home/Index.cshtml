@model List<Mascota>

<h1>Mascotas en adopcion</h1>

<form asp-action="index" method="get">
    Filtrar por tipo de mascota:
    <select name="tipomascota">
        <option value="0">Todos</option>
        @foreach(var t in (List<TipoMascota>)ViewBag.Tipos)
        {
            <option value="@t.Id">@t.Nombre</option>
        }
    </select>   
    <button>Filtrar</button>
</form>

@if (Model.Count == 0)
{
    <p>AÃºn no hay mascotas para adoptar</p>
}

<div class="text-center">
    @foreach (var m in Model)
    {
        <h2>@m.NombreTemporal</h2>
        <img src="@m.Foto" width="300">
    }
</div>